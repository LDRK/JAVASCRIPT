<html>
     
     <head>
	 <title> Taller Sesion 9</title>
	 <link rel="stylesheet" href="cssf2/MyStilo.css"/>
	  </head>
	 
	<body>
	<fieldset class="field">
				<legend>Ingrese los datos</legend>
				<label>Cantidad: </label>
				<input type="number" value="0" id="cant"/>
				<br/>
				<label>Valor unidad: </label>
				<input type="number" value="0" id="valor"/>
			    <input type="submit" onclick="calcular();" value="calcular">
	</fieldset>
		<script>
			function calcular () {
				
				var nu1        = document.getElementById("cant").value;
				var nu2        = document.getElementById("valor").value;
				    valorneto  = parseInt(nu1) * parseInt(nu2);
				    valoriva   = valorneto * "0.19";
				    valortotal = parseInt(valoriva) + parseInt(valorneto);
				    alert("VALOR: "+ valorneto+"  IVA: "+valoriva+"  TOTAL: "+valortotal);
							  }
		</script>
			
	
</html>



